<controls:MetroWindow x:Class="CompilePal.Launch_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="GAME PROFILE" Height="300" Width="300" Icon="CompilePalIcon.ico"
                      MinWidth="300" MinHeight="300" ShowIconOnTitleBar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="GameProfilesListBox" Margin="10,10,7,32" BorderThickness="1" MouseDoubleClick="GameProfilesListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox Name="AlwaysLaunchCheckBox" Content="Always launch this game profile" HorizontalAlignment="Left" Margin="10,0,0,9" RenderTransformOrigin="0.213,0.056" Width="191" Height="18" VerticalAlignment="Bottom"/>

    </Grid>
</controls:MetroWindow>
